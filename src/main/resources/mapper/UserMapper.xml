    <!--更新一个订单对象信息-->
    <update id="updateOrder_info" >
        update  order_info set
            sTel = #{sTel},
            sAddress = #{sAddress},
            product = #{product},
            sName = #{sName},
            gTel = #{gTel},
            gAddress = #{gAddress},
            preWeight=#{preWeight},
            orderNumber = #{orderNumber},
            comment=#{comment}
    where id = #{id}
    </update>



    <!--通过id查询一个订单对象-->
    <select id="selectOrder_Info" resultType="com.forest.wu.pojo.Order_info">

        select * from order_info where id =#{id}

    </select>
    <!--查询订单-->
    <select id="selectOrder" resultType="com.forest.wu.pojo.Order_info">
        select * from order_info  where 1=1
        <if test="id!=null">
            and id =#{id}

        </if>

        <if test="sTel!=null">
            and sTel =#{sTel}

        </if>
        <if test="status!=null">
            and status=#{status}

        </if>
        <if test="gName!=null">
            and gName like concat('%',#{gName},'%')

        </if>

    </select>


    <!--更新修改一个快递员信息-->
    <update id="updateUser" >
        update user set username=#{username},email=#{email},phone=#{phone},
        sex=#{sex},parentid=#{parentid},type=#{type} where id=#{id}
    </update>



<!--通过id查询出一个快递员对象-->
