    <!--模糊查询，按id，username，phone，email。查询对应的快递员-->
  <select id="selectUser" resultType="com.forest.wu.pojo.User">
     select * from user where type=3
      <if test="id!=''">
        and id like concat('%',#{id},'%')
      </if>
     <if test="username!=''">
        and username like concat('%',#{username},'%')
     </if>
    <if test="phone!=''">
      and phone like concat('%',#{phone},'%')
    </if>
    <if test="email!=''">
      and email like concat('%',#{email},'%')
    </if>

    order by time limit #{pageNo},#{pageSize}

  </select>

